<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.petHotel.mapper.UserMapper">

<insert id="insertUser"  parameterType="com.example.petHotel.dto.UserDto">
    insert into user (username , pwd)
    values ( #{username} , #{pwd} )
</insert>

<select id="getuser"  parameterType="String" resultType="com.example.petHotel.dto.UserDto">
   select * from user
   where username=#{username}
</select>

<select id="questions" parameterType="int"  resultType="com.example.petHotel.dto.QuestionDto">
   select * from question
   where userid=#{userid}
</select>

</mapper>